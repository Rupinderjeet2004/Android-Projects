<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.librarymanagement.AddLibrarian">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new username and password"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginLeft="35dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/userFieldremLibrarian"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/passFieldaddLibrarian"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="170dp"
        android:hint="Password"
        android:inputType="textPassword"
         />

    <Button
        android:id="@+id/savebuttaddLibrarian"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passFieldaddLibrarian"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="Save" />

    <Button
        android:id="@+id/librarianListbutt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passFieldaddLibrarian"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="30dp"
        android:text="Librarian List" />

</RelativeLayout>
