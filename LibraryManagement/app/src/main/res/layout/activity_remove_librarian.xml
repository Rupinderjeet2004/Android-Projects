<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.librarymanagement.RemoveLibrarian">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:fontFamily="sans-serif"
        android:text="Remove Librarian"
        android:textColor="#000000"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/userFieldremLibrarian"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:hint="Username"
         />

    <Button
        android:id="@+id/removeButtremovelibrarianframe"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userFieldremLibrarian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:text="Remove" />

</RelativeLayout>
