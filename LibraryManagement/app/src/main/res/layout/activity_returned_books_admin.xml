<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.librarymanagement.returnedBooksAdmin">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner4ReturnedBT"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinner4ReturnedBT"
        android:layout_marginTop="40dp"
        android:text="Choose Class :"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:id="@+id/showButtreturnedbooks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner4ReturnedBT"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="58dp"
        android:text="Show" />

    <Button
        android:id="@+id/allreturnedbooksButtreturnedbooks"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/showButtreturnedbooks"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/showButtreturnedbooks"
        android:layout_toRightOf="@+id/showButtreturnedbooks"
        android:text="all returned books" />

    <Spinner
        android:id="@+id/spinner4ReturnedBT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showButtreturnedbooks"
        android:layout_alignStart="@+id/showButtreturnedbooks"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="37dp" />

    <Spinner
        android:id="@+id/spinner5ReturnedBS"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/allreturnedbooksButtreturnedbooks"
        android:layout_alignRight="@+id/allreturnedbooksButtreturnedbooks"
        android:layout_alignTop="@+id/spinner4ReturnedBT" />

</RelativeLayout>
